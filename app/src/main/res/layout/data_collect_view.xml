<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/collectionTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:text="已采集时间: 0秒"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/clock" />

    <TextView
        android:id="@+id/accelerometerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:text="加速度计数据："
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_accel" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/accel_chart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:hardwareAccelerated="true" />

    <TextView
        android:id="@+id/gyroscopeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:text="陀螺仪数据："
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_gyo" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/gyro_chart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:hardwareAccelerated="true" />

    <TextView
        android:id="@+id/magnetometerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:text="磁力计数据："
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_magn" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/magn_chart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:hardwareAccelerated="true" />

</LinearLayout>